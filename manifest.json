{
  "name": "SpotKin - AI Pet & Baby Monitor",
  "short_name": "SpotKin",
  "description": "AI-powered monitoring application for pets and babies with advanced scene analysis and safety alerts",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4f46e5",
  "orientation": "portrait-primary",
  "scope": "./",
  "lang": "en",
  "categories": [
    "productivity",
    "utilities",
    "lifestyle"
  ],
  "screenshots": [
    {
      "src": "./images/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "SpotKin mobile interface showing camera view and analysis results"
    },
    {
      "src": "./images/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "SpotKin desktop interface with monitoring zones and history"
    }
  ],
  "icons": [
    {
      "src": "images/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "images/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "./images/favicon.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "splash_pages": null,
  "features": [
    "camera",
    "microphone",
    "background-sync",
    "push-messaging",
    "offline-support",
    "installability"
  ],
  "capabilities": [
    "background_sync",
    "push_messaging",
    "share_target",
    "shortcuts",
    "offline_support",
    "splash_screen",
    "smart_queue_management"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+spotkin",
      "url": "./?handler=%s"
    }
  ],
  "privacy_policy": "./privacy-policy.html",
  "terms_of_service": "./terms-of-service.html",
  "permissions": {
    "camera": "Required for AI monitoring functionality",
    "microphone": "Optional for voice alerts",
    "notifications": "Optional for critical alerts",
    "background-sync": "For offline data management"
  }
}